# PayPal (von https://developer.paypal.com/dashboard/)
# Für Sandbox: Sandbox-Zugangsdaten verwenden und PAYPAL_SANDBOX=true setzen
NEXT_PUBLIC_PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# Optional: für Live-Zahlungen auf false setzen oder weglassen
PAYPAL_SANDBOX=false

# Überweisung – Bankdaten (optional; sonst Beispielwerte)
# BANK_RECIPIENT=Dein Name / Firma
# BANK_IBAN=DE89 3704 0044 0532 0130 00
# BANK_BIC=COBADEFFXXX
# BANK_NAME=Commerzbank

# Admin-Bereich (/admin) – Passwort für Login (mind. 8 Zeichen)
ADMIN_PASSWORD=

# Supabase (von https://supabase.com/dashboard → Projekt → Settings → API)
NEXT_PUBLIC_SUPABASE_URL=https://dein-projekt.supabase.co
SUPABASE_SERVICE_ROLE_KEY=
